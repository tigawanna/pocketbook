{
  "compilerOptions": {
    "target": "es2020",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "baseUrl": ".",
    "types": ["vite/client"],

    "paths": {
      "@/*": ["src/*"]
    }
  }
}
